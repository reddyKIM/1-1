---
const {
  eyebrow = 'ENERGY FOR A BETTER FUTURE',
  title,
  subtitle,
  cta,
  secondaryCta
} = Astro.props;
---
<section
  class="relative isolate overflow-hidden rounded-[var(--radius-lg)] bg-gradient-to-br from-primary/90 via-secondary/80 to-surface text-white shadow-brand"
  aria-labelledby="hero-title"
>
  <div class="absolute inset-0 opacity-40 mix-blend-screen">
    <div class="h-full w-full bg-[url('https://images.unsplash.com/photo-1509395176047-4a66953fd231?auto=format&fit=crop&w=1600&q=80')] bg-cover bg-center" aria-hidden="true"></div>
  </div>
  <div class="relative z-10 flex flex-col gap-6 p-10 sm:p-16">
    <p class="text-sm uppercase tracking-widest text-white/80">{eyebrow}</p>
    <h1 id="hero-title" class="max-w-3xl font-display text-3xl sm:text-5xl">
      {title}
    </h1>
    <p class="max-w-2xl text-base sm:text-lg text-white/90">{subtitle}</p>
    <div class="flex flex-wrap gap-4">
      {cta && (
        <a
          class="inline-flex items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-semibold text-primary transition hover:-translate-y-0.5 hover:shadow-lg focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          href={cta.href}
        >
          {cta.label}
        </a>
      )}
      {secondaryCta && (
        <a
          class="inline-flex items-center justify-center rounded-full border border-white/70 px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white/10 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          href={secondaryCta.href}
        >
          {secondaryCta.label}
        </a>
      )}
    </div>
  </div>
</section>
